<%= form_with scope: :booking, method: :get do |f| %>
  <%= f.hidden_field :number_passengers, value: @number_passengers %>
  <% @flights.each do |flight| %>
    <div>
      <%= f.label :flight, 'Flight' %>
      <%= f.radio_button :flight, flight.id %>
    </div>
    <%= render flight %>
  <% end %>
  <%= f.submit 'Select' %>
<% end %>
